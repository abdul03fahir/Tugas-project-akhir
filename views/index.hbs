<!-- PROJECTS -->
<section id="projects" class="container section">
  <div class="section-header">
    <h2>My Projects:</h2>
    <a href="/add?type=project" class="add-btn">+</a>
  </div>
  <div class="list">
    {{#if projects.length}}
      {{#each projects}}
        <div class="card">
          {{#if this.image}}
            <img src="{{this.image}}" class="thumb" alt="{{this.title}}">
          {{else}}
            <div class="no-thumb">No Image</div>
          {{/if}}
          <div class="card-body">
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
                    {{#if this.tags}}
            <div class="tags-container">
              {{#each this.tags}}
                <span class="tag-item">{{this}}</span>
              {{/each}}
            </div>
          {{/if}}
            <!-- Delete Button -->
            <form action="/delete/{{this.type}}/{{this.id}}" method="POST" style="margin-top: 8px;">
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p>No project yet.</p>
    {{/if}}
  </div>
</section>
